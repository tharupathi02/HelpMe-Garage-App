<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUrgentRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        style="@style/Widget.Material3.CardView.Filled">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        android:layout_margin="20dp"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center_vertical"
                        style="@style/Widget.Material3.CardView.Filled">

                        <ImageView
                            android:id="@+id/imgUrgentRequest"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher"/>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtUrgentRequestTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Urgent Request Title"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20dp"/>

                        <TextView
                            android:id="@+id/txtUrgentRequestDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Urgent Request Description"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:maxLength="100"
                            android:fontFamily="@font/poppins"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="-10dp">

                    <Button
                        android:id="@+id/btnLocation"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/location"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnAccept"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="5dp"
                        android:backgroundTint="@color/main_color"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/accept"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnReject"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/red"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/reject"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/btnComplete"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/main_color"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Complete Request"
                        android:visibility="gone"
                        android:layout_weight="1"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtUrgentRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urgent"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/urgent_animation" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>